{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "es6",
      "allowJs": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": [
        "dom",
        "es5",
        "scripthost",
        "es2015",
        "DOM.Iterable",
        "ESNext"
      ],
      "jsx": "react",
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "src/**/*.ts",
      "src/**/*.json",
      "src/**/*.tsx"],
      "exclude": ["node_modules/*", "src/i18n.config.js"],
  }